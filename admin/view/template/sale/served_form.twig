{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-return" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
					<i class="fa fa-save"></i>
				</button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
					<i class="fa fa-reply"></i>
				</a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li>
						<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>

	<div class="container-fluid">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					<i class="fa fa-list"></i>
					{{served_title}}</h3>
			</div>
			<div class="panel-body">
				{% set tempZoneId = 0 %}
				<div class="served-to-select">
					<div class="tree">
						<ul>
							{% for item in localization %}
								{# zones #}
								{% if tempZoneId != item.zone_id %}
									<li>
										<span data-level="zone" data-id="{{item.zone_id}}">
											{{item.zone}}
										</span>
									{% endif %}
									{# municipios #}
									<ul>
										<li>
											<span data-level="mun" data-id="{{item.municipio_id}}">
												{{item.mun}}
											</span>
											{% set parroquias = item.parroquia|split(',') %}
											{# parroquias #}
											<ul>
												{% for par in parroquias %}
													<li>
                                                        {% set myPar = par|split('-')  %}
														<span data-level="par" data-id="{{myPar[0]}}">
															{{myPar[1]}}
														</span>
													</li>
												{% endfor %}
											</ul>
										</li>
										{% set tempMunId = item.municipio_id %}
									</ul>
									{% set tempZoneId = item.zone_id %}
									{% if tempZoneId != item.zone_id %}
									</li>
								{% endif %}

							{% endfor %}
						</ul>
					</div>
				</div>
				<div class="served-selected"></div>
			</div>
		</div>
	</div>

	<script>
		$(document).ready(function () {

$(".tree li").each(function () {
if ($(this).children("ul").length > 0) {
$(this).addClass("parent");
}
});

$(".tree li.parent > span").click(function () {
$(this).parent().toggleClass("active");

$(this).parent().children("ul").slideToggle("fast");
});


$(window).load(function () { // Run code

$(".tree li").each(function () {
$(this).toggleClass("active");
$(this).children("ul").slideToggle("fast");
});
});

});
	</script>


	{{ footer }}
